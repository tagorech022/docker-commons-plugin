<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>docker-commons</artifactId>
    <version>1.22-SNAPSHOT</version>
    <packaging>hpi</packaging>

    <name>Jenkins Docker Commons Plugin</name>
    <url>https://plugins.jenkins.io/docker-commons</url>

    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>4.64</version>
    </parent>

    <properties>
        <java.level>11</java.level>
        <jenkins.version>2.414.1</jenkins.version>
        <hpi.plugin.compatibleSinceVersion>1.10</hpi.plugin.compatibleSinceVersion>
        <plugin-first-classloader>true</plugin-first-classloader>
    </properties>

    <dependencies>
        <!-- Jenkins core APIs -->
        <dependency>
            <groupId>org.jenkins-ci.main</groupId>
            <artifactId>jenkins-core</artifactId>
            <version>${jenkins.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Optional Jenkins dependencies -->
        <!-- Add more as needed -->

        <!-- JUnit for tests -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.13.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>jenkins</id>
            <url>https://repo.jenkins-ci.org/public/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>jenkins</id>
            <url>https://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>

</project>
