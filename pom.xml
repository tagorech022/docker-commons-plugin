<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>4.64</version>
    <relativePath/>
  </parent>

  <groupId>org.jenkins-ci.plugins</groupId>
  <artifactId>docker-commons</artifactId>
  <version>1.22-SNAPSHOT</version>
  <packaging>hpi</packaging>
  <name>Docker Commons Plugin</name>
  <url>https://github.com/jenkinsci/docker-commons-plugin</url>

  <properties>
    <java.level>8</java.level>
    <jenkins.version>2.387.2</jenkins.version>
    <findbugs.failOnError>false</findbugs.failOnError>
  </properties>

  <licenses>
    <license>
      <name>The MIT License</name>
      <url>http://opensource.org/licenses/MIT</url>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:https://github.com/jenkinsci/docker-commons-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:jenkinsci/docker-commons-plugin.git</developerConnection>
    <url>https://github.com/jenkinsci/docker-commons-plugin</url>
    <tag>HEAD</tag>
  </scm>

  <dependencies>
    <!-- Jenkins core APIs -->
    <dependency>
      <groupId>org.jenkins-ci.main</groupId>
      <artifactId>jenkins-core</artifactId>
      <version>${jenkins.version}</version>
      <scope>provided</scope>
    </dependency>

    <!-- Stapler (Jenkins web framework) -->
    <dependency>
      <groupId>org.kohsuke.stapler</groupId>
      <artifactId>stapler</artifactId>
      <version>1.262</version>
      <scope>provided</scope>
    </dependency>

    <!-- AccMod (access modifiers) -->
    <dependency>
      <groupId>org.kohsuke.accmod</groupId>
      <artifactId>accmod</artifactId>
      <version>1.32</version>
      <scope>provided</scope>
    </dependency>

    <!-- CloudBees Credentials API -->
    <dependency>
      <groupId>com.cloudbees.plugins</groupId>
      <artifactId>credentials</artifactId>
      <version>2.3.19</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.cloudbees.plugins</groupId>
      <artifactId>ssh-credentials</artifactId>
      <version>1.18.1</version>
      <scope>provided</scope>
    </dependency>

    <!-- JSON (used internally by Jenkins plugins) -->
    <dependency>
      <groupId>net.sf.json-lib</groupId>
      <artifactId>json-lib</artifactId>
      <version>2.4</version>
      <classifier>jdk15</classifier>
    </dependency>

    <!-- Optional testing dependencies -->
    <dependency>
      <groupId>org.jenkins-ci.plugins.workflow</groupId>
      <artifactId>workflow-job</artifactId>
      <version>2.40</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins.workflow</groupId>
      <artifactId>workflow-step-api</artifactId>
      <version>2.24</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Jenkins plugin build support -->
      <plugin>
        <groupId>org.jenkins-ci.tools</groupId>
        <artifactId>maven-hpi-plugin</artifactId>
        <version>3.24</version>
        <extensions>true</extensions>
      </plugin>

      <!-- Enforcer plugin to catch Maven issues -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>enforce-maven</id>
            <goals><goal>enforce</goal></goals>
            <configuration>
              <rules>
                <requireMavenVersion>
                  <version>[3.6.0,)</version>
                </requireMavenVersion>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
